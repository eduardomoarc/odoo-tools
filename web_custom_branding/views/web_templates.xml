<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Hide "Powered by Odoo" in Login page footer -->
        <template id="login_layout_inherit" inherit_id="web.login_layout">
            <xpath expr="//div[@class='card-body']//div[last()]" position="replace">
                <div class="text-center small mt-4 pt-3 border-top" t-if="not disable_footer">
                    <t t-if="not disable_database_manager">
                        <a class="border-end pe-2 me-1" href="/web/database/manager">Manage Databases</a>
                    </t>
                </div>
            </xpath>
        </template>

    </data>
</odoo>
