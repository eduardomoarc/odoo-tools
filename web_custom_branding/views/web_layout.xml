<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="web_layout_title" inherit_id="web.layout">
        <xpath expr="//title" position="replace">
            <title t-esc="title or request.env['ir.config_parameter'].sudo().get_param('web_title', '')"/>
        </xpath>
    </template>
</odoo>